<table id="users_error_table" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th colspan="2" class="table-header-title">
        <h3 class="text-center text-danger">Error Log</h3>
      </th>
    </tr>
    <tr class="text-danger">
      <th>User</th>
      <th>Error Description</th>
    </tr>
  </thead>
  <tbody id="users_errors">
    <% if @users_errors.any? %>
      <%= render @users_errors %>
    <% else %>
      <tr>
        <td colspan="2" class="text-center text-muted">No errors yet</td>
      </tr>
    <% end %>
  </tbody>
</table>
